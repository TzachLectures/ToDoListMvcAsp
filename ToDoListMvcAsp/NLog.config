<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Define logging configuration -->
  <targets>
    <!-- File logging target: logs will be written to `logs/todo-app.log` -->
    <target name="file" xsi:type="File" fileName="logs/todo-app.log"
            layout="${longdate} ${uppercase:${level}} ${message} ${exception}" />
  </targets>

  <!-- Define the minimum log level and target -->
  <rules>
    <!-- Log to file for all levels (Trace, Debug, Info, Warn, Error, Fatal) -->
    <logger name="*" minlevel="Info" writeTo="file" />
  </rules>
</nlog>
